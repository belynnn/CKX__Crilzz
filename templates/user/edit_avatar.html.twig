{% extends 'base.html.twig' %}

{% block title %}Modifier l'avatar de profil{% endblock %}

{% block body %}
<section class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm p-4">
        <h2 class="text-center mb-4">Modifier votre avatar de profil</h2>

        <div class="avatar-gallery">
          <h2>Galerie d'avatars</h2>
          <div class="row">
            {{ form_start(editAvatarForm) }}
              <div class="avatar-choice-list mb-3">
                {% for child in editAvatarForm.avatar %}
                  <label class="avatar-choice-label">
                    {{ form_widget(child) }}
                    <img src="{{ asset('images/avatars/' ~ child.vars.value) }}"
                      alt="{{ child.vars.label }}"
                      class="avatar-choice-preview"
                    />
                  </label>
                {% endfor %}
              </div>

              <div class="text-center">
                <button class="btn btn-crilzz">Mettre Ã  jour</button>
                <a href="{{ path('app_user_profile') }}" class="btn btn-secondary ms-2">Annuler</a>
              </div>
            {{ form_end(editAvatarForm) }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}
