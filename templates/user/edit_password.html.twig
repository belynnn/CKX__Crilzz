{% extends 'base.html.twig' %}

{% block title %}Modifier mon email{% endblock %}

{% block javascripts %}
  {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}
  <div class="container mt-5">
    <h1 class="mb-4">Modifier mon mot de passe</h1>

    <div class="toast-container position-fixed top-0 start-50 translate-middle-x p-3" style="z-index: 1100;">
      {% for label, messages in app.flashes %}
          {% for message in messages %}
              <div class="toast align-items-center text-white bg-danger border-0 show mb-2" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">
                  <div class="d-flex">
                      <div class="toast-body">
                          {{ message }}
                      </div>
                      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                  </div>
              </div>
          {% endfor %}
      {% endfor %}
    </div>

    {{ form_start(editPasswordForm) }}
      <div class="mb-3">
        {{ form_label(editPasswordForm.plainPassword.first, 'Nouveau mot de passe') }}
        {{ form_widget(editPasswordForm.plainPassword.first, {
          'attr': {'class': 'form-control' ~ (editPasswordForm.plainPassword.first.vars.errors|length ? ' is-invalid' : '')}
        }) }}
        {% for error in editPasswordForm.plainPassword.first.vars.errors %}
          <div class="invalid-feedback">{{ error.message }}</div>
        {% endfor %}
      </div>

      <div class="mb-3">
        {{ form_label(editPasswordForm.plainPassword.second, 'Confirmation') }}
        {{ form_widget(editPasswordForm.plainPassword.second, {
          'attr': {'class': 'form-control' ~ (editPasswordForm.plainPassword.second.vars.errors|length ? ' is-invalid' : '')}
        }) }}
        {% for error in editPasswordForm.plainPassword.second.vars.errors %}
          <div class="invalid-feedback">{{ error.message }}</div>
        {% endfor %}
      </div>

      <button class="btn btn-primary">Mettre Ã  jour</button>
    {{ form_end(editPasswordForm) }}
  </div>
{% endblock %}