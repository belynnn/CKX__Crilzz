{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="container mt-1">
        <h1 class="text-center mb-4">Mettre à jour mon profil</h1>

        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        {{ form_start(editProfileForm) }}

                            {# Nom d'utilisateur #}
                            <div class="mb-3">
                                {{ form_label(editProfileForm.username, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(editProfileForm.username, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(editProfileForm.username) }}
                            </div>

                            {# Email #}
                            <div class="mb-3">
                                {{ form_label(editProfileForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(editProfileForm.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(editProfileForm.email) }}
                            </div>

                            {# Nouveau mot de passe #}
                            <div class="mb-3">
                                {{ form_label(editProfileForm.plainPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(editProfileForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(editProfileForm.plainPassword) }}
                            </div>

                            {# Confirmer le nouveau mot de passe #}
                            <div class="mb-3">
                                {{ form_label(editProfileForm.plainPasswordConfirm, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(editProfileForm.plainPasswordConfirm, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(editProfileForm.plainPasswordConfirm) }}
                            </div>

                            {# Bouton de mise à jour #}
                            <div class="d-grid">
                                {{ form_widget(editProfileForm.submit, {'attr': {'class': 'btn btn-crilzz'}}) }}
                            </div>

                        {{ form_end(editProfileForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
